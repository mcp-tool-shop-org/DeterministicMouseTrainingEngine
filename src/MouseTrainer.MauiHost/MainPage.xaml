<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="MouseTrainer.MauiHost.MainPage"
             Title="Mouse Trainer">
    <Grid RowDefinitions="Auto,*,Auto,Auto" Padding="0" RowSpacing="0">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="16,12" BackgroundColor="#1B1E28">
            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                <Label Text="Reflex Gates"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White" />
                <Label x:Name="StatusLabel"
                       Text="Ready"
                       FontSize="14"
                       TextColor="#888"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>

        <!-- Game surface: pointer events + debug overlay -->
        <Border x:Name="GameSurface"
                Grid.Row="1"
                Stroke="#333"
                StrokeThickness="1"
                BackgroundColor="#0D0F14"
                Padding="0">
            <GraphicsView x:Name="OverlayView" />
        </Border>

        <!-- Log (compact) -->
        <ScrollView Grid.Row="2" HeightRequest="120" BackgroundColor="#111318">
            <Label x:Name="LogLabel" FontFamily="Consolas" FontSize="11"
                   TextColor="#8A8" LineBreakMode="WordWrap" Padding="8,4" />
        </ScrollView>

        <!-- Controls -->
        <HorizontalStackLayout Grid.Row="3" Spacing="12" Padding="16,8"
                               BackgroundColor="#1B1E28">
            <Button x:Name="ActionButton" Text="Start" Clicked="OnActionClicked"
                    BackgroundColor="#4CAF50" TextColor="White" />
            <Button x:Name="NewSeedButton" Text="New Seed" Clicked="OnNewSeedClicked"
                    BackgroundColor="#555" TextColor="White" />
            <Label x:Name="SeedLabel" Text="Seed: 0x00C0FFEE"
                   FontSize="12" TextColor="#888" VerticalOptions="Center" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
