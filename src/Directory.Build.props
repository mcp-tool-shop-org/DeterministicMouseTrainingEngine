<Project>

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AnalysisLevel>latest-recommended</AnalysisLevel>
  </PropertyGroup>

  <!--
    Warnings-as-errors for library projects only.
    MAUI host opts out because its SDK generates warnings we don't control.
    Convention: library projects do NOT set <UseMaui>true</UseMaui>.
  -->
  <PropertyGroup Condition="'$(UseMaui)' != 'true'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

</Project>
